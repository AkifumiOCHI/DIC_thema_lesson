<div class="container">
  <div class="row">
    <div class="col-md-6 col-xs-6">
<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>

<%= link_to 'New Blog', new_blog_path %>


    <% @blogs.each do |blog| %>
     <ul>
       <li>ユーザ名：<%= blog.user.name %></li>
       <li>タイトル：<%= blog.title %></li>
       <li>内容：<%= blog.content %></li>
       <li><%= link_to 'Show', blog %></li>
       <li><%= link_to 'Edit', edit_blog_path(blog) %></li>
       <li><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></li>
     </ul>
    <% end %>

</div>
</div>
</div>
<br>
